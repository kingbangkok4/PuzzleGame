<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.puzzlegame.MainActivity"
    android:background="@drawable/question_bg">

    <Button
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imgQuestion"
        android:layout_below="@+id/txtTime"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:id="@+id/btnAnswer1"
        android:layout_gravity="center"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="-20dp" />

    <Button
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:id="@+id/btnAnswer2"
        android:layout_below="@+id/btnAnswer1"
        android:layout_alignStart="@+id/btnAnswer1"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:id="@+id/btnAnswer3"
        android:layout_below="@+id/btnAnswer2"
        android:layout_alignStart="@+id/btnAnswer2"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="30dp"
        android:text="Time"
        android:id="@+id/txtTime"
        android:layout_centerHorizontal="true"
        android:background="#de5cf5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/btnExit"
        android:background="@drawable/main"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/nn"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <ToggleButton
        android:id="@+id/tbBGM"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ttt"
        android:textOn=""
        android:textOff=""
        android:checked="true"
        android:layout_alignBottom="@+id/btnExit"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnAnswer3"
        android:layout_alignTop="@+id/btnExit" />

</RelativeLayout>
